{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^wd-(.*)": "wot-design-uni/components/wd-$1/wd-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationBarTextStyle": "black",
        "enablePullDownRefresh": false,
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/my/my",
      "style": {
        "navigationBarTitleText": "个人中心",
        "navigationBarTextStyle": "white",
        "enablePullDownRefresh": false,
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/chat/chat",
      "style": {
        "navigationBarTitleText": "会话",
        "enablePullDownRefresh": false,
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "登录",
        "enablePullDownRefresh": false,
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/register/register",
      "style": {
        "navigationBarTitleText": "注册",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/route/route",
      "style": {
        "navigationBarTitleText": "路线规划",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/share/share",
      "style": {
        "navigationBarTitleText": "路线分享",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/point/point",
      "style": {
        "navigationBarTitleText": "地点",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/pointDetail/pointDetail",
      "style": {
        "navigationBarTitleText": "详情",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/guide/guide",
      "style": {
        "navigationBarTitleText": "攻略",
        "enablePullDownRefresh": false,
        "navigationBarBackgroundColor": "#ffffff",
        "navigationStyle": "custom"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8",
    "usingComponents": {
      "ant-icon": "/wxcomponents/antd-mini/Icon/index",
      "ant-avatar": "/wxcomponents/antd-mini/Avatar/index",
      "ant-welcome": "/wxcomponents/antd-mini/Welcome/index",
      "ant-prompts": "/wxcomponents/antd-mini/Prompts/index",
      "ant-input": "/wxcomponents/antd-mini/Input/index",
      "ant-steps": "/wxcomponents/antd-mini/Steps/index",
      "ant-loading": "/wxcomponents/antd-mini/Loading/index",
      "ant-tabs": "/wxcomponents/antd-mini/Tabs/index",
      "towxml": "/wxcomponents/towxml/towxml"
    }
  },
  "tabBar": {
    "color": "#333",
    "selectedColor": "#4285F4",
    "backgroundColor": "#fff",
    "borderStyle": "white",
    "list": [
      {
        "text": "地图",
        "pagePath": "pages/index/index",
        "iconPath": "static/tabs/map_unselect.png",
        "selectedIconPath": "static/tabs/map_select.png"
      },
      {
        "text": "攻略",
        "pagePath": "pages/guide/guide",
        "iconPath": "static/tabs/guide_unselect.png",
        "selectedIconPath": "static/tabs/guide_select.png"
      },
      {
        "text": "会话",
        "pagePath": "pages/chat/chat",
        "iconPath": "static/tabs/chat_unselect.png",
        "selectedIconPath": "static/tabs/chat_select.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/my/my",
        "iconPath": "static/tabs/my_unselect.png",
        "selectedIconPath": "static/tabs/my_select.png"
      }
    ]
  }
}
