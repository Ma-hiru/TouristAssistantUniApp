{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^wd-(.*)": "wot-design-uni/components/wd-$1/wd-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationBarTextStyle": "black",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/my/my",
      "style": {
        "navigationBarTitleText": "个人中心",
        "navigationBarTextStyle": "black",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/chat/chat",
      "style": {
        "navigationBarTitleText": "会话",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "登录",
        "enablePullDownRefresh": false
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8",
    "usingComponents": {
      "van-button": "/wxcomponents/vant/button/index",
      "van-cell": "/wxcomponents/vant/cell/index",
      "van-cell-group": "/wxcomponents/vant/cell-group/index",
      "van-icon": "/wxcomponents/vant/icon/index",
      "van-image": "/wxcomponents/vant/image/index",
      "van-row": "/wxcomponents/vant/row/index",
      "van-col": "/wxcomponents/vant/col/index",
      "van-popup": "/wxcomponents/vant/popup/index",
      "van-toast": "/wxcomponents/vant/toast/index",
      "van-card": "/wxcomponents/vant/card/index",
      "ant-button": "/wxcomponents/antd-mini/Button/index",
      "ant-icon": "/wxcomponents/antd-mini/Icon/index"
    }
  },
  "tabBar": {
    "color": "#333",
    "selectedColor": "#4285F4",
    "backgroundColor": "#fff",
    "borderStyle": "white",
    "list": [
      {
        "text": "首页",
        "pagePath": "pages/index/index",
        "iconPath": "static/tabs/home_unselect.png",
        "selectedIconPath": "static/tabs/home_select.png"
      },
      {
        "text": "会话",
        "pagePath": "pages/chat/chat",
        "iconPath": "static/tabs/chat_unselect.png",
        "selectedIconPath": "static/tabs/chat_select.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/my/my",
        "iconPath": "static/tabs/my_unselect.png",
        "selectedIconPath": "static/tabs/my_select.png"
      }
    ]
  }
}
